<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="quilter" _name="Quilter" version="1.0">
  <author>Lains</author>
  <_description>Emphasis on focus.</_description>

  <style name="text"            foreground="#1a1a1a" background="#F7F7F7"/>
  <style name="cursor"          foreground="#47a1e5"/>
  <style name="current-line"    background="#eff0f1"/>
  <style name="selection"       foreground="#1a1a1a" background="#47a1e5"/>
  <style name="search-match"    foreground="#1a1a1a" background="#EEAA00"/>

  <!-- Bold -->
  <style name="def:strong-emphasis" bold="true"/>

  <!-- Italic -->
  <style name="def:emphasis" foreground="#555" italic="true"/>

  <!-- Links -->
  <style name="def:link-text" foreground="#1a1a1a"/>
  <style name="def:link-destination" foreground="#47a1e5"/>

  <!-- Code -->
  <style name="def:inline-code" background="#F2F0F2" foreground="#1a1a1a"/>
  <style name="def:preformatted-section" background="#F2F0F2" foreground="#1a1a1a"/>

  <!-- Line-break -->
  <style name="def:note" foreground="#1a1a1a"/>

  <!-- Backslash Escaping -->
  <style name="def:special-char" foreground="#B7B6B7"/>

  <!-- Headers -->
  <style name="def:heading" foreground="#1a1a1a" bold="true"/>
</style-scheme>
